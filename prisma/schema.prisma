generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId       String   @id
  firstName    String
  lastName     String
  businessName String   @default("")
  phone        String   @default("") 
  email        String   @unique
  password     String
  connectedAccounts Json  @default("[]")
  credits      Int      @default(0)
  createdAt    DateTime @default(now())
  businesses   Business[]
}

model Business {
  locationId  String   @id
  userId      String
  name        String
  phones      String[]  @default([])
  location    String
  services    String[]  @default([])
  keywords    String[]  @default([]) //20 max
  targetLocations String[] @default([])
  website     String?
  coordinates Json    @default("{}")
  cid         String?
  imagePrompt String? @default("")
  active      Boolean  @default(false)
  createdAt   DateTime @default(now())
  gmbData     Json    @default("{}")
  user        User     @relation(fields: [userId], references: [userId])
  callLogs    CallLog[]
  post Post[]
  review Review[]
}

model CallLog {
  id         Int      @id @default(autoincrement())
  deviceId   String
  date       DateTime @default(now())
  locationId String
  business   Business @relation(fields: [locationId], references: [locationId])
}

model Post {
  id            String      @id @default(uuid())
  locationId    String
  postContent   String      @default("")
  postImage     String?     @default("")
  postUrl       String?     @default("")
  createdAt     DateTime    @default(now())
  business      Business    @relation(fields: [locationId], references: [locationId])
}

model Review {
  id              String      @id @default(uuid())
  locationId      String
  reviewContent   String      @default("")
  replyContent    String?     @default("")
  reviewUrl       String?     @default("")
  stars           Int         @default(0)
  author          String?     @default("")
  createdAt       DateTime    @default(now())
  business        Business    @relation(fields: [locationId], references: [locationId])
}